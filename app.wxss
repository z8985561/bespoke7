/* 浮动 */
.pull-left{
  float: left;
}
pull-right{
  float: right;
}
.clearfix::after{
  content: "";
  display: block;
  clear: both;
}

/* flex布局 */
.flex{
  display: flex;
}
.flex-wrap{
  display: flex;
  flex-wrap: wrap;
}
.flex-column{
  flex-direction: column;
}
.flex-jus{
  justify-content: space-between;
}
.flex-center{
  justify-content: center;
}
.flex-start{
  justify-content: flex-start;
}
.flex-end{
  justify-content: flex-end;
}
.flex-align-start{
  align-items: flex-start;
}
.flex-align-end{
  align-items: flex-end;
}
.flex-align-center{
  align-items: center;
}


